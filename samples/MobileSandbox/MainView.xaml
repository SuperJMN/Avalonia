<UserControl x:Class="MobileSandbox.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:global="clr-namespace:"
             x:CompileBindings="True"
             x:DataType="global:MainViewModel">
  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="Parent" Command="{Binding Command}">
        <MenuItem FontSize="40" Command="{Binding Command}">
          <MenuItem.Header>
            <Border Background="Red">
              <TextBlock>Child 1</TextBlock>
            </Border>
          </MenuItem.Header>
        </MenuItem>
        <MenuItem FontSize="40" Command="{Binding Command}" Header="Child 2" />
        <MenuItem FontSize="40" Command="{Binding Command}" Header="Child 3" />
      </MenuItem>
    </Menu>
    <TextBlock Text="{Binding Message}" />
  </DockPanel>
</UserControl>
